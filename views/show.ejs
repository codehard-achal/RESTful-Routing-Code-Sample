<% include partials/header %>

    <div class="ui main text container segment">
        <div class="ui huge header">
            <%= blog.title %>
        </div>
        <div class="ui top attached">
            <div class="item">
                <img class="ui centered rounded image" src="<%= blog.image%>">
                <div style="margin-top: 0.5cm" class="content">
                    <span>
                        <%= blog.created.toDateString() %>
                    </span>
                </div>
                <div id="desc" class="description">
                    <p>
                        <!-- The "=" sign can be replaced with "-" and
                             then html formatting tags (viz. <p>, <strong> etc.) will be allowed 
                             within the description field in the blog post -->
                        <%= blog.body %>
                    </p>
                </div>
                <a class="ui orange basic button" href="/blogs/<%= blog._id %>/edit">Edit</a>
                <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                    <button class="ui red basic button">DELETE POST</button>
                </form>
                </div>
        </div>
    </div>

    <% include partials/footer %>